<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
    <h1>My Meals</h1>
        <%= render 'meals/mymeals' %>
<% end %>
 
<div id="mealsContainer">
<h1>All Meals</h1>    
    <% @meals.each do |meal| %>


    <div class="mealhols">
        <h1><%= meal.mealName %></h1>
        <%= link_to (image_tag meal.image_url, :class => "mealsholsIm"), meal %>
        <p>
            <%= meal.description %>
        </p>
        <p>
            Price <%= number_to_currency(meal.price, :unit => "â‚¬") %>
            <br>
            Category:<%= meal.category %>
            Allergens:<%= meal.mealAllergens %>
        </p>
        <p>
            <%= link_to 'More options', meal, :class => "button", :role => "button" %>
            <a href="/cart/<%= meal.id %>" class="button">Add To Cart</a>
        </p>
        <p>
            <% if current_user.role == "Admin" || current_user.role == "Staff" %>
                <%= link_to 'Edit', edit_meal_path(meal), :class => "button", :role => "button" %>
                <%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
            <% end %>
        </p>
    
    </div>
    <% end %>


</div>

