<div class="mainCont">

  <%= form_for(meal) do |f| %>
    <% if meal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>
  
        <ul>
        <% meal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :mealName %>
      <%= f.text_field :mealName, id: :meal_name, :type =>"text"%>
