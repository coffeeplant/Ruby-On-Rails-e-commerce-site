      <%= f.label :description %>
      <%= f.text_area :description, id: :meal_description, :type =>"text"%>
    </div>
    
    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :price, id: :meal_price, :type =>"text"%>
    </div>
  
    <div class="field">
      <%= f.label :image_url %>
      <%= f.text_field :image_url , id: :meal_image_url%>
    </div>
  
    <div class="field">
      <%= f.label :category %>
      <%= f.text_field :category, id: :meal_category, :type =>"text" %>
    </div>
  
    <div class="field">
      <%= f.label :mealAllergens %>
      <%= f.text_field :mealAllergens, id: :meal_allergens, :type =>"text" %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  
</div>
