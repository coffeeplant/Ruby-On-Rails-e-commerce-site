<h2>Popular this Week</h2>
<table class="catalog">
    <!-- need to change this to highest number of orders -->
    <% @meals.limit(3).order(:id).each do |meal| %>
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag meal.image_url, :style => "height:100px"), meal %>
                </div>
                
                <div class="title">
                    <%= link_to meal.mealName, meal %>
                </div>
                
                <div class="description">
                    <%= meal.description %>
                </div>
                
                <div class="price">
                    <%= number_to_currency(meal.price, :unit => "â‚¬") %>
                </div>
                <div class="links">
                    <% if session[:login] ==1 %>
                        <%= link_to 'Edit', edit_meal_path(meal) %>
                        <%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% else %>
                    
                    <a href="/cart/<%= meal.id %>">Add to Cart</a>

                    <% end %>
                </div>
            </td>
        </tr>
    <% end %>
</table>